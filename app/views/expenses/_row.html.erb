<tr>
  <td class="date">
    <div class="day"><%=expense.date.strftime("%d")%></div>
    <div class="month"><%=expense.date.strftime("%B")%></div>
  </td>
  <td>
    <div>
      <span class="type"><%=expense.type.name if expense.type %></span>
    </div>
    <div>
      <span class="concept"><%=expense.concept%></span>
    </div>
  </td>
  <td class="category text-right"><%= expense.category.name if expense.category %></td>
  <td class="text-right" style="width: 170px;">
    <div class="amount"><%=number_to_currency(expense.amount)%></div>
    <div class="actions">
      
      <%= link_to edit_expense_path(expense),remote:true do %>
        <span class="glyphicon glyphicon-edit"></span> Edit
      <%end%>
      <%= link_to expense_path(expense), method: :delete , data: {confirm: "Are you sure?"} do %>
        <span class="glyphicon glyphicon-trash"></span> Remove
      <%end%>
    </td>
  </tr>
